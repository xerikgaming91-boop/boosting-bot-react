{
  "name": "boosting-bot-react",
  "version": "1.1.2",
  "private": true,
  "type": "module",
  "description": "Discord boosting bot with React (Vite) UI on a single Express port (dev & prod), SQLite, Raider.IO import, Discord signups + roster.",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "build": "vite build --config client/vite.config.js",
    "start": "cross-env NODE_ENV=production node src/index.js",
    "db:wipe:raids": "node scripts/db-tools.mjs wipe-raids",
    "db:wipe:all": "node scripts/db-tools.mjs wipe-all"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "nanoid": "^5.0.7",
    "node-fetch": "^3.3.2",
    "passport": "^0.7.0",
    "passport-discord": "0.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "vite": "^5.4.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.4",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  }
}
